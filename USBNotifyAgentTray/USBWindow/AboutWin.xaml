            <TextBlock Text="About IT Support Tools" FontSize="18" Canvas.Left="24" Canvas.Top="10"/>
            <TextBlock Text="Version :" FontSize="16" Canvas.Left="24" Canvas.Top="52"/>
            <TextBlock x:Name="txtAgentVersion" Text="?" FontSize="16" Canvas.Left="103" Canvas.Top="52"/>
