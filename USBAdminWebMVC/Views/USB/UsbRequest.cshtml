@{
    var requestUrl = USBAdminHelp.WebHttpUrlPrefix + "/usb/UsbRequestIndex";
    var requestRegUrl = USBAdminHelp.WebHttpUrlPrefix + "/usb/usbRequestReg";
}

<div>
    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
        <legend>Usb Register Request</legend>
    </fieldset>

    <table id="index" lay-filter="index" class="layui-hide">
    </table>
</div>

<script type="text/html" id="usbRequest">
    <a style="color:blue;text-decoration:underline" href="javascript:;" layuimini-content-href="@requestRegUrl?id={{d.id}}" data-title="Request Register">Id</a>
</script>

@section Script{
    <script>
        layui.use(['form', 'table', 'miniTab'], function () {
            let form = layui.form,
                table = layui.table;
            let miniTab = layui.miniTab;

            table.render({
                elem: '#index'
                , url: '@requestUrl'
                , page: true
                , cols: [[
                    { fixed: 'id', title: 'Id', toolbar: '#usbRequest', width: 60, sort: true },
                    { field: 'requestTimeString', title: 'RequestTime', width: 200, sort: true },
                    { field: 'manufacturer', title: 'Manufacturer', width: 150, sort: true },
                    { field: 'product', title: 'Product', width: 200, sort: true },
                    { field: 'vid_Hex', title: 'Vid_Hex', width: 100, sort: true },
                    { field: 'pid_Hex', title: 'Pid_Hex', width: 100 },
                    { field: 'serialNumber', title: 'SerialNumber', width: 250, sort: true },
                    { field: 'userEmail', title: 'UserEmail', width: 150, sort: true }
                ]]
            });

            miniTab.listen();
        });
    </script>
}