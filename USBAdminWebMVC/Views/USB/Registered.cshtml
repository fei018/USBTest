@{
    var registeredIndexUrl = USBAdminHelp.WebHttpUrlPrefix + "/usb/RegisteredIndex";
}

<div>
    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
        <legend>Usb Index</legend>
    </fieldset>

    <table id="index" class="layui-hide" style="width:100%">
    </table>
</div>

@section Script{
    <script>
        layui.use(['form', 'table', 'layer'], function () {
            var form = layui.form,
                table = layui.table,
                layer = layui.layer;

            table.render({
                    elem: '#index',
                    url:'@registeredIndexUrl',
                    page: true,
                    cols: [[
                        { field: 'id', width: 60, title: 'Id', sort: true }
                        , { field: 'deviceDescription', title: 'Description', width: 200 }
                        , { field: 'manufacturer', title: 'Manufacturer', width: 150, sort: true }
                        , { field: 'product', title: 'Product', width: 150, }
                        , { field: 'vid_Hex', title: 'Vid', width: 150, sort: true }
                        , { field: 'pid_Hex', title: 'Pid',width: 150, sort: true }
                        , { field: 'serialNumber', title: 'SerialNumber', width: 250, sort: true }
                    ]]
                });
        });
    </script>

}