<div>
    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
        <legend>Usb Index</legend>
    </fieldset>

    <table id="indexUsb" class="cell-border" style="width:100%">
    </table>
</div>

@section Script{
    <script>
        layui.use(['form', 'table', 'layer'], function () {
            var form = layui.form,
                table = layui.table,
                layer = layui.layer;

            $.ajax({
                type: 'get',
                url: '/usb/indexusb',
                dataType: 'json',
                success: function (json) {
                    if (json.code === 400) {
                        layer.alert(json.msg);
                    }
                    if (json.code === 200) {
                        showTable(json.data);
                    }
                }
            });

            function showTable(dataSet) {
                table.render({
                    elem: '#indexUsb',
                    data: dataSet,
                    page: true,
                    cols: [[
                        { field: 'id', width: 80, title: 'Id', sort: true }
                        , { field: 'deviceDescription', title: 'Description', width: 150 }
                        , { field: 'manufacturer', title: 'Manufacturer', width: 150, sort: true }
                        , { field: 'product', title: 'Product', width: 150, }
                        , { field: 'vid', title: 'Vid', width: 150, sort: true }
                        , { field: 'pid', title: 'Pid',width: 150, sort: true }
                        , { field: 'serialNumber', title: 'SerialNumber', width: 200, sort: true }
                    ]]
                });
            }
        });
    </script>

}